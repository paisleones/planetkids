<?xml version='1.0' encoding='utf-8'?>
<widget id="com.trabajocreativo.PlanetKIDS" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Planet KIDS</name>
    <description>
        Las mejores series infantiles
    </description>
    <author email="info@trabajocreativo.com" href="http://www.trabajocreativo.com">
        Trabajocreativo.com
    </author>
    <content src="index.html" />
    <access origin="http://127.0.0.1*"/>
    <access origin="http://www.trabajocreativo.com/" subdomains="true"/>
    <preference name="permissions" value="none" />
    <preference name="orientation" value="auto" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="true" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="true" />
    <preference name="ios-statusbarstyle" value="black-opaque" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-minSdkVersion" value="10" />
    <preference name="android-installLocation" value="auto" />
    <preference name="SplashScreen" value="foo" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="SplashMaintainAspectRatio" value="true" />
<plugin name="org.apache.cordova.device" source="pgb" spec="0.3.0" />
<plugin name="org.apache.cordova.dialogs" source="pgb" spec="0.3.0" />
<plugin name="org.apache.cordova.file" source="pgb" spec="1.3.3" />
<plugin name="org.apache.cordova.inappbrowser" spec="n/a" />
<plugin name="org.apache.cordova.network-information" source="pgb" spec="0.2.15" />
<plugin name="org.apache.cordova.splashscreen" source="pgb" spec="1.0.0" />
    <icon src="images/icon.png" />
    <icon gap:platform="android" gap:qualifier="ldpi" src="www/res/icon/android/icon-36-ldpi.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="www/res/icon/android/icon-48-mdpi.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="www/res/icon/android/icon-72-hdpi.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="www/res/icon/android/icon-96-xhdpi.png" />
    <access origin="*" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="whatsapp:*" />
    <platform name="android">
    <platform name="browser">
    <preference name="SplashScreenDelay" value="10000" /> <!-- defaults to "3000" -->
    <preference name="SplashScreenBackgroundColor" value="#ffffff" /> <!-- defaults to "#464646" -->
    <preference name="ShowSplashScreen" value="true" /> <!-- defaults to "true" -->
    <preference name="SplashScreenWidth" value="600" /> <!-- defaults to "170" -->
    <preference name="SplashScreenHeight" value="300" /> <!-- defaults to "200" -->
    </platform>
    <allow-intent href="market:*" />
    </platform>
    <engine name="android" spec="^4.0.2" />
    <gap:platform name="android" />
    <access origin="*" subdomains="true"/>
    <access origin="whatsapp:*" launch-external="yes" />
</widget>
